<footer class="site-footer">
  <div class="footer-container">
    <nav class="footer-nav">
      <ul class="footer-menu">
        {% for link in linklists[section.settings.footer].links %}
          <li><a href="{{ link.url }}">{{ link.title | upcase }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer",
      "label": "Footer menu",
      "default": "footer"

    }
  ]
}
{% endschema %}