<style>
.password-footer {
  position: fixed;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  width: 100%;
  padding: 0 2rem;
}

.password-footer-text {
  font-family: 'IBM Plex Mono', monospace;
  font-size: 0.65rem;
  color: rgba(255, 255, 255, 0.5);
  letter-spacing: 0.05em;
}

@media (max-width: 768px) {
  .password-footer {
    bottom: 1rem;
  }
}
</style>

{% if section.settings.show_footer %}
<div class="password-footer">
  <p class="password-footer-text">{{ section.settings.footer_text }}</p>
</div>
{% endif %}

{% schema %}
{
  "name": "Password Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_footer",
      "label": "Show Footer",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Â© 2025 YIMMS. All rights reserved."
    }
  ]
}
{% endschema %}