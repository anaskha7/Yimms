<div class="blog-page">
  <div class="blog-header">
    <h1 class="blog-title">{{ blog.title }}</h1>
  </div>

  <div class="blog-posts">
    {% for article in blog.articles %}
      <article class="blog-post">
        {% if article.image %}
          <a href="{{ article.url }}" class="blog-post-image">
            <img src="{{ article.image | img_url: 'large' }}" alt="{{ article.title }}">
          </a>
        {% endif %}
        
        <div class="blog-post-content">
          <h2 class="blog-post-title">
            <a href="{{ article.url }}">{{ article.title }}</a>
          </h2>
          
          <div class="blog-post-meta">
            <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
            <span>{{ article.author }}</span>
          </div>
          
          <div class="blog-post-excerpt">
            {{ article.excerpt_or_content | strip_html | truncate: 200 }}
          </div>
          
          <a href="{{ article.url }}" class="blog-post-readmore">Read More →</a>
        </div>
      </article>
    {% endfor %}
  </div>

  {% if paginate.pages > 1 %}
    <div class="pagination">
      {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" class="pagination-link">← Previous</a>
      {% endif %}
      
      <span class="pagination-current">Page {{ paginate.current_page }} of {{ paginate.pages }}</span>
      
      {% if paginate.next %}
        <a href="{{ paginate.next.url }}" class="pagination-link">Next →</a>
      {% endif %}
    </div>
  {% endif %}
</div>