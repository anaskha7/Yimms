<div class="article-page">
  <article class="article">
    <header class="article-header">
      <h1 class="article-title">{{ article.title }}</h1>
      
      <div class="article-meta">
        <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
        {% if article.author %}
          <span>by {{ article.author }}</span>
        {% endif %}
      </div>
    </header>

    {% if article.image %}
      <div class="article-image">
        <img src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}">
      </div>
    {% endif %}

    <div class="article-content">
      {{ article.content }}
    </div>

    {% if blog.comments_enabled? %}
      <div class="article-comments">
        <h3>Comments</h3>
        
        {% if article.comments_count > 0 %}
          <div class="comments-list">
            {% for comment in article.comments %}
              <div class="comment">
                <p class="comment-author">{{ comment.author }}</p>
                <p class="comment-date">{{ comment.created_at | date: '%B %d, %Y' }}</p>
                <div class="comment-content">{{ comment.content }}</div>
              </div>
            {% endfor %}
          </div>
        {% endif %}

        <div class="comment-form">
          {% form 'new_comment', article %}
            <h4>Leave a Comment</h4>
            
            <input type="text" name="comment[author]" placeholder="Name" required>
            <input type="email" name="comment[email]" placeholder="Email" required>
            <textarea name="comment[body]" placeholder="Your comment" required></textarea>
            
            <button type="submit" class="comment-submit">Post Comment</button>
          {% endform %}
        </div>
      </div>
    {% endif %}

    <div class="article-back">
      <a href="{{ blog.url }}" class="back-link">‚Üê Back to {{ blog.title }}</a>
    </div>
  </article>
</div>